<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"  android:padding="24dp"
    android:background="#E1F5FE">

    <LinearLayout
        android:id="@+id/headerContainerContagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="16dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/icon_contagem"
            android:scaleType="centerInside"
            android:background="@drawable/circulo_azul"
            android:padding="18dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="Ícone de Contagem" />

        <TextView
            android:id="@+id/tvTituloContagem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jogo de Contagem"
            android:textSize="34sp"
            android:textStyle="bold"
            android:textColor="#0288D1"
            android:gravity="center_vertical"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvPerguntaContagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="Carregando pergunta..."
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#0288D1"/>

    <ImageView
        android:id="@+id/ivImagem"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_marginBottom="32dp"
        android:contentDescription="Imagem do desafio"
        android:scaleType="fitCenter"/>

    <Button
        android:id="@+id/btnOpcao1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Opção 1"
        android:textSize="20sp"
        android:backgroundTint="#0288D1"
        android:textColor="@android:color/white"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnOpcao2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Opção 2"
        android:textSize="20sp"
        android:backgroundTint="#0288D1"
        android:textColor="@android:color/white"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnOpcao3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Opção 3"
        android:textSize="20sp"
        android:backgroundTint="#0288D1"
        android:textColor="@android:color/white"/>

</LinearLayout>